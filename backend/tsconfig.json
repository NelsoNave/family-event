    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "types": ["node", "react"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
